    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'start'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["build", "--bin=start", "--package=start"],
                "filter": {
                    "name": "start",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "initCommands": ["settings set target.disable-aslr false"]
        },
        {
            "name": "Debug unit tests in executable 'start'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["test", "--no-run", "--bin=start", "--package=start"],
                "filter": {
                    "name": "start",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "initCommands": ["settings set target.disable-aslr false"]
        }
    ]
}
